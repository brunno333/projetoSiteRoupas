{{>style}}

<main>
    <div class="container">
        <div class="row">
            <div class="col-6 offset-3">
                
                {{>mensagens}}
                
                <form action="/cadastrar" method="post" enctype="multipart/form-data">
                    <input type="text" name="nome" class="form-control" placeholder="Nome do produto">
                    <input type="number" name="valor" class="form-control" placeholder="Valor do produto">
                    <input type="file" name="imagem" class="form-control" >
                    <button type="submit" class="btn btn-primary">Cadastrar</button>
                </form>
            </div>
            
        </div>

    </div>
    <div class="container">
        <div class="row">
            {{#each produtos}}
                <div class="col-12 col-sm-3 col-md-2 col-lg-2">
                    <div class="card">
                        <img src="../imagens/{{imagem}}">
                        <div class="textos">
                            <p>{{nome}}</p>
                            <p>R${{valor}},00</p>
                        </div>
                        <a href="/formularioEditar/{{codigo}}" class="btn btn-warning">Editar</a>
                        <a href="/remover/{{codigo}}&{{imagem}}" class="btn btn-danger">Remover</a>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</main>