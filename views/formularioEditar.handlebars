
<style>
    form{
    margin-top: 30px;
    text-align: center;
    background-color: blanchedalmond;
    }

    form input{
    margin-bottom: 10px;
    }

    form img {
        width: 170px;
        margin-bottom: 5px;
        margin-top: 5px;
    }

    .card{
        margin-top: 40px;
        margin-bottom: -50px;
        padding: 3px;
    }

    .textos{
        display: flow-root;
        font-weight: bold;
    }

    .card a{
        margin-bottom: 2px;
    }

</style>


<main>
    <div class="container">
        <div class="row">
            <div class="col-6 offset-3">
                <form action="/editar" method="post" enctype="multipart/form-data">

                    <img src="../imagens/{{produto.imagem}}">

                    <input type="hidden" name="nomeImagem" value="{{produto.imagem}}">

                    <input type="hidden" name="codigo" value="{{produto.codigo}}">
                    <input type="text" name="nome" value="{{produto.nome}}" class="form-control" placeholder="Nome do produto">
                    <input type="number" name="valor" value="{{produto.valor}}" class="form-control" placeholder="Valor do produto">
                    <input type="file" name="imagem" class="form-control" >
                    <button type="submit" class="btn btn-primary">Editar</button>
                    <a href="/" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
            
        </div>

    </div>
   
</main>